                        <div class="tab-pane" id="pills-status" role="tabpanel" aria-labelledby="pills-status-tab">

            <div class="row row-cards row-deck">
              <div class="col-12">
  <div class="table-responsive"  style="min-height: 18rem;">
    <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
      <thead>
        <tr>
          <th>Scene</th>
          <th>Usage</th>
          <th class="text-center">Status</th>
          <th>Activity</th>
          <th class="text-center">Clients</th>
          <th class="text-center"><i class="icon-settings"></i></th>
        </tr>
      </thead>
      <tbody>
{% set scenequery = ("[sql-table json]select * from scenes where projectid = '" ~ projectid ) ~ "' [/sql-table]" %}
{% set scenedb = ((scenequery|shortcodes) | json_decode) %}
{% set count = 0 %}

{% for scene in scenedb %}
{% if scene %}
{% if 'sumo' in scene.models %}
                        <tr>
                          <td>
                            <div>{{ scene.name }}</div>
                            <div class="small text-muted">
                              {{ scene.edittime }}
                            </div>
                          </td>
                          <td>
                            <div class="clearfix">
                              <div class="float-left" id="scenestatus_runtime_{{ scene.sceneid }}">
                                <strong>42%</strong>
                              </div>
                              <div class="float-right">
                                <small class="text-muted">Jun 11, 2015 - Jul 10, 2015</small>
                              </div>
                            </div>
                            <div class="progress progress-xs">
                              <div class="progress-bar bg-yellow" role="progressbar" style="width: 42%" aria-valuenow="42" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                          </td>
                          <td id="scenestatus_{{ scene.sceneid }}" class="text-center">
                          </td>
                          <td>
                            <div class="small text-muted">Last sim run</div>
                            <div id="scenestatus_lasttime_{{ scene.sceneid }}">4 minutes ago</div>
                          </td>
                          <td class="text-center">
                            <div id="scenestatus_clients_{{ scene.sceneid }}" class="mx-auto chart-circle chart-circle-xs" data-value="0.0" data-thickness="3" data-color="blue">
                              <div id="scenestatus_clients_value_{{ scene.sceneid }}" class="chart-circle-value">0</div>
                            </div>
                          </td>
                          <td class="text-center">
                            <div class="item-action dropdown">
                              <a href="javascript:void(0)" data-toggle="dropdown" class="icon"><i class="fe fe-more-vertical"></i></a>
                              <div class="dropdown-menu dropdown-menu-right">
                                <a href="javascript:startSim({{ scene.sceneid }})" class="dropdown-item"><i class="dropdown-icon fe fe-play"></i> Start Sim </a>
                                <a href="javascript:stopSim({{ scene.sceneid }})" class="dropdown-item"><i class="dropdown-icon fe fe-pause"></i> Pause Sim </a>
                                <a href="javascript:resetSim({{ scene.sceneid }})" class="dropdown-item"><i class="dropdown-icon fe fe-rotate-ccw"></i> Reset Sim </a>
                                <div class="dropdown-divider"></div>
                                <a href="javascript:killSim({{ scene.sceneid }})" class="dropdown-item"><i class="dropdown-icon fe fe-power"></i> Kill Sim</a>
                              </div>
                            </div>
                          </td>
                        </tr>

{% set count = count + 1 %}
{% endif %}
{% endif %}
{% endfor %}   
{% if count == 0 %}         
                        <tr>
                          <td>
                            <div>No Simulations for this project</div>
                            <div class="small text-muted">
                              check with administrator.
                            </div>
                          </td>
                        </tr>
{% endif %}                        
      </tbody>
    </table>
</div>     
</div></div>           
                        </div>