

channelsUpdate = function( crect ) {

    channels = [];
    var ratio = 1.0 / renderer.getPixelRatio();
    var wide = crect.width * ratio;
    var high = crect.height * ratio;

    var smallwidth = wide * 0.5;
    var smallheight = high * 0.5;

    var mainwidth = smallwidth;
    var mainheight = smallheight;

    channels.push( { top: 0, left: 0, width: mainwidth, height: mainheight } );

    channels.push( { top: 0, left: smallwidth, width: smallwidth, height: smallheight } );
    channels.push( { top: smallheight, left: 0, width: smallwidth, height: smallheight } );
    channels.push( { top: smallheight, left: smallwidth, width: smallwidth, height: smallheight } );
}
